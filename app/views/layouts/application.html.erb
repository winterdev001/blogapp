<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="logo-area">
        <ul class="logo-area-all">
          <div class="logo-area-list ">
            <li class="logo-area-item">
              <a href="#" class="text-decoration-none"><i><img src="https://img.icons8.com/doodle/28/000000/twitter--v1.png"></i></a>
            </li>
            <li class="logo-area-item">
              <a href="#" class="text-decoration-none"><i><img src="https://img.icons8.com/nolan/28/000000/facebook-f.png"></i></a>
            </li>
            <li class="logo-area-item">
              <a href="#" class="text-decoration-none"><i><img src="https://img.icons8.com/color/28/000000/instagram-new.png"></i></a>
            </li>   
            <li class="logo-area-item ">
                <h1 class="nav-brand"> GetPosted </h1>
            </li>         
          </div>   
        </ul>     
      </div>
      <%= render  "shared/topnav" %>
    </header>    
    <div class="all">
      <%= yield %>
    </div>
    <footer>
      <%= render  "shared/bottom_nav" %>
    </footer>
  </body>
</html>
