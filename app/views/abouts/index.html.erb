<div class="all-content ">
  <div class="container mb-3">
    <div class=" blog-index-card">
      <div class="">
        <div class="row row-cols-1 row-cols-md-3 ">
          <% @blogs.each do |blog| %>
          <div class="col mb-4 mt-5">
            <a href="/blogs/<%=blog.id%>/blogs/blog_detail" class="text-decoration-none text-dark">
              <div class="card recent-blog-cards">
                <%= image_tag('normal.jpg', class:"card-img all-blogs-card-img")%>
                <div class="card-body">
                  <p class="card-text"><%= blog.content%></p>
                  <p class="card-text"><small class="text-muted">Posted by : <%= blog.admin.email %> </small></p>
                </div>
              </div>
            </a>
          </div>
          <%end%>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center mb-2">
      <%= paginate @blogs %>
    </div>    
  </div>
</div>