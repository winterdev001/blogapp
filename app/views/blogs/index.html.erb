<div class="container mb-3">
  <div class=" blog-index-card">
    <div class="">    
      <div class="row">
        <div class="col-md-8">
          <div class="card mb-3 mt-5" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="..." class="card-img" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">Card title</h5>
                  <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">     
          <div class="card most-popular mt-5">
            <h3 class="card-title">Most Popular</h3>
            <div class="card-body">
              <%@blogs.each do |blog|%>
                <%= link_to  blog.title, blogs_most_popular_blog_path(blog.id, blog_id:blog.id) , class:"text-capitalize text-dark text-decoration-none most-popular-link"%><br>
                <hr>
              <%end%> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

 
