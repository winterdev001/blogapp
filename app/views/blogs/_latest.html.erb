<div class="card mb-3 latest-card" style="max-width: 100%;height:65vh !important;">
  <% @blogs.order("created_at DESC").limit(1).each do |blog|%>
  <div class="row no-gutters">    
      <div class="col-md-7">
        <a href="/blogs/<%=blog.id%>/blogs/blog_detail" class="text-decoration-none text-dark">
          <%if blog.image.present?%>
            <%= image_tag blog.image.url(:medium)%> 
          <%else%>
            <%= image_tag('normal.jpg', class:"card-img latest-image")%>
          <%end%>
        </a>
      </div>
      <div class="col-md-5">
        <a href="/blogs/<%=blog.id%>/blogs/blog_detail" class="text-decoration-none text-dark">
          <div class="card-body">
            <div class="latest-body ">
              <h5 class="card-title title"><%= blog.title%></h5>
              <p class="card-text"><%= blog.content%></p>
              <p class="card-text"><small class="text-muted">Posted by: </small></p>
            </div>
          </div>
        </a>
      </div>
  </div>
  <%end%>
</div>