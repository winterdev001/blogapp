
<table class="mb-3">
    <thead>
        <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @blogs.each do |blog| %>
        <tr>
            <% if  params[:id].to_i == blog.id%>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>            
            <%end %>
            </tr>
        <% end %>
        <a href="/blogs" class="text-decoration-none text-dark">Back</a>
    </tbody>
</table>

      